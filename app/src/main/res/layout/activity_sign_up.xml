<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="#ECD39F"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".SignUP">

        <TextView
            android:id="@+id/loginPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A57628"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="Create New Account"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_profile_picture_admin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/login" />

        <EditText
            android:id="@+id/firstNameInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="serif"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/lastNameInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:hint="Last Name"
            android:fontFamily="serif"
            android:background="@drawable/edit_text_border"
            android:inputType="textPersonName"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/loginPageTitle"
            android:layout_marginTop="19dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="serif"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/emailInput"
            android:layout_marginTop="19dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="serif"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/confirmPassInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/edit_text_border"
            android:hint="Confirm Password"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:padding="10dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:text="Gender" />

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:fontFamily="serif"
                android:spinnerMode="dropdown" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:layout_weight="1"
                android:text="Phone Number" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_gravity="center_horizontal"
                android:gravity="start"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:ems="10"
                android:hint="05XXXXXXXX"
                android:inputType="phone"
                android:digits="0123456789"
                android:maxLength="10" />

        </LinearLayout>

        <Button
            android:id="@+id/photoUploadButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="serif"
            android:textSize="9pt"
            android:backgroundTint="#D8A82D"
            android:text="Upload Photo" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="9pt"
            android:fontFamily="serif"
            android:backgroundTint="#D8A82D"
            android:text="Sign Up" />
    </LinearLayout>

</ScrollView>

