<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECD39F"
    tools:context=".ui.home.vieworders.ViewAllOrdersFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- RecyclerView for displaying pizza cards -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAllOrders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnCalculateOrders"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#dea916"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:onClick="onCalculateOrdersClick"
        android:text="Orders Summary" />

    <Button
        android:id="@+id/btnCalculateTypes"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#dea916"
        android:textSize="16sp"
        android:layout_marginEnd="@dimen/fab_margin"
        android:onClick="onCalculateTypeClick"
        android:text="Income Summary" />


</FrameLayout>