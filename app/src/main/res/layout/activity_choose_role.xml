<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#ECD39F">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:paddingTop="40dp"
        android:text="Tell Us Who You Are?"
        android:textAlignment="center"
        android:textSize="14pt" />

    <ImageButton
        android:id="@+id/adminButton"
        android:layout_width="308dp"
        android:layout_height="260dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="94dp"
        android:background="@android:color/transparent"
        android:contentDescription="Admin button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/admin" />

    <TextView
        android:id="@+id/admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:text="Admin"
        android:textSize="14pt" />

    <ImageButton
        android:id="@+id/customerButton"
        android:layout_width="307dp"
        android:layout_height="190dp"
        android:layout_below="@+id/adminButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="52dp"
        android:background="@android:color/transparent"
        android:contentDescription="Customer button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/customer" />

    <TextView
        android:id="@+id/customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:text="Customer"
        android:textSize="14pt" />

</RelativeLayout>