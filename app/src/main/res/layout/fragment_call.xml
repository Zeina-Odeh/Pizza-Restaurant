<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E7C3"
    tools:context=".ui.home.call.CallFragment">

    <LinearLayout
        android:layout_width="442dp"
        android:layout_height="269dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonCallRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:backgroundTint="#A57628"
            android:fontFamily="serif"
            android:text="Call Pizza Restaurant" />

        <Button
            android:id="@+id/buttonOpenMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:fontFamily="serif"
            android:backgroundTint="#A57628"
            android:layout_marginTop="20px"
            android:text="Open Map" />

        <Button
            android:id="@+id/buttonSendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#A57628"
            android:textSize="18dp"
            android:fontFamily="serif"
            android:layout_marginTop="20px"
            android:text="Send Email To Restaurant" />
    </LinearLayout>

</FrameLayout>