<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/pizza_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="serif"
            android:padding="3dp"
            android:text="Pizza Type"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pizza_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pizza_type"
            android:fontFamily="serif"
            android:padding="3dp"
            android:text="Pizza Size"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/offer_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pizza_size"
            android:fontFamily="serif"
            android:padding="3dp"
            android:text="Offer Period"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pizza_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/offer_period"
            android:fontFamily="serif"
            android:padding="3dp"
            android:text="Total Price"
            android:textSize="18sp" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
