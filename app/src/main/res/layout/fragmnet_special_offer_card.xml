<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/margarita_photo"
            android:layout_width="65dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:contentDescription="Pizza Image"
            app:srcCompat="@drawable/margarita" />


        <!-- Buttons Column -->

        <LinearLayout
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/margarita_photo"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizza_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:fontFamily="serif"
                    android:padding="3dp"
                    android:text="Margarita"
                    android:textSize="18sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/pizza_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:padding="3dp"
                android:layout_marginStart="4dp"
                android:text="Pizza Size"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/offer_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pizza_size"
                android:fontFamily="serif"
                android:padding="3dp"
                android:layout_marginStart="4dp"
                android:text="Offer Period"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pizza_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="serif"
                    android:padding="3dp"
                    android:text="$50.0"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/pizza_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text=""
                    android:textColor="#981212"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderedTime"
                    android:layout_width="19dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:id="@+id/orderedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/favorite"
                android:layout_width="65dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5pt"
                android:src="@drawable/animation" />

            <Button
                android:id="@+id/orderButton"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#D18D07"
                android:layout_marginLeft="7dp"
                android:text="Order"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
